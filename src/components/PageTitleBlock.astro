---
const {
    numberGridCols
} = Astro.props
---
<section class=`wuul-gradiant grid grid-cols-${numberGridCols} justify-items-center items-center sm:h-60 lg:h-80`>
    <section class="col-span-2 text-center">
        <div class="flex flex-col justify-center h-full">
            <slot/>
        </div>
    </section>
    <section>
        <slot name="title-image"/>
    </section>
</section>

<style>
    .wuul-gradiant {
        background: linear-gradient(to bottom, #74B881, #465B3D );
    }
</style>