---
interface Props {
    href: string;
    txt: string;
}
const {href, txt} = Astro.props;
---

<a class="link-text text-sm md:text-base text-wuul-purp font-medium hover-underline" href={href}>
    {txt}
</a>

<style>
    :hover.hover-underline {
        text-decoration: none;
        color: #8D6DAC;
    }
</style>
